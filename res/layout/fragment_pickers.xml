<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
    <LinearLayout
        android:id="@+id/layout_color_pickers"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <NumberPicker
            android:id="@+id/band1value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            />
        <NumberPicker
            android:id="@+id/band2value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            />
        <NumberPicker
            android:id="@+id/band3value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            />
        <NumberPicker
            android:id="@+id/band4value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_above="@id/layout_color_pickers"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textSize="@dimen/picker_label_fontsize"
            android:gravity="center"
            android:text="@string/header_band_one"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textSize="@dimen/picker_label_fontsize"
            android:gravity="center"
            android:text="@string/header_band_two"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textSize="@dimen/picker_label_fontsize"
            android:gravity="center"
            android:text="@string/header_band_three"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:textSize="@dimen/picker_label_fontsize"
            android:gravity="center"
            android:text="@string/header_band_four"
            />
    </LinearLayout>
</RelativeLayout>
